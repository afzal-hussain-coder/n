<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/chatboxuser"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/text_chatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="User Name"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="time"
            android:textColor="#000"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/chat_audio"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/text_chatname"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/presence_audio_away"
            android:visibility="gone" />


        <TextView
            android:id="@+id/text_chatdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_chatname"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="#080808"
            android:textSize="15sp" />


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp" />


</RelativeLayout>

