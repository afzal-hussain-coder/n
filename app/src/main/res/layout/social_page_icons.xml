<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/fb"
        android:layout_width="@dimen/social_icon_dim"
        android:layout_height="@dimen/social_icon_dim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/twitter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/facebook_icon" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="@dimen/social_icon_dim"
        android:layout_height="@dimen/social_icon_dim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/instagram"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fb"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twitter_icon" />

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="@dimen/social_icon_dim"
        android:layout_height="@dimen/social_icon_dim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linkedin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/twitter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instagram_icon" />

    <ImageView
        android:id="@+id/linkedin"
        android:layout_width="@dimen/social_icon_dim"
        android:layout_height="@dimen/social_icon_dim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/instagram"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/linkedin_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>