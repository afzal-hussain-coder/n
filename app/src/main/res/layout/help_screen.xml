<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.pb.criconet.Utills.MytextviewThin
        android:id="@+id/ttl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="VERTEUS"
        android:textColor="@color/white"
        android:textSize="32sp" />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ttl"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/app_icon" />


    <TextView
        android:id="@+id/txtView_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtView_id"
        android:gravity="center"
        android:padding="7dp"
        android:text="1800-234-5678"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rr"
        android:layout_marginBottom="50dp"
        android:autoLink="email"
        android:gravity="center"
        android:padding="2dp"
        android:text="support@criconet.com"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/rr"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
