        <TextView
            android:id="@+id/text_chatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="User Name"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="time"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_chatdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_chatname"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="#080808"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/chat_attachment"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/text_chatname"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/chat_doc"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/text_chatname"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/chat_audio"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/text_chatname"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/presence_audio_away"
            android:visibility="gone" />

        <!--<ImageView-->
