<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_dash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerInside"
                    android:src="@drawable/tv_holder" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pb.criconet.Utills.MytextviewBold
                android:id="@+id/ground_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxLines="2"
                android:padding="4dp"
                android:text="Ground Name"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.pb.criconet.Utills.Mytextview
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.pb.criconet.Utills.Mytextview
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.pb.criconet.Utills.Mytextview
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:inputType="textNoSuggestions"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/play_icon"
        android:layout_below="@+id/ll"
        android:layout_margin="10dp"
        android:text="Watch Match"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/round_corner_red"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</RelativeLayout>


